<div class="card-post">
  <div class="card-title">
    <div class="middle">
      <h3 class="title is-1">Enter Credentials</h3>
    </div>
  </div>
  <div class="card-body text-center">
  <p>New User? <a href="/login">Sign-Up Here</a></p>
  <form id="login-form">
    
    <div class="field">
      <label class="label">Email</label>
      <div class="control">
        <input id="email-login" class="input" type="email" placeholder="e.g. alex@example.com">
      </div>
    </div>
    <br>
    <div class="field">
      <label class="label">Password</label>
      <div class="control">
        <input id="password-login" class="input" type="password" placeholder="********">
      </div>
    </div>
    <br>
    <button class="bttn bttn-primary" type="submit">Sign in</button>
    </div>
  </form>
  

</div>
</div>

<script src="/js/login.js"> </script>