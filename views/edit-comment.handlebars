
<form id="edit-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>
    <div class="card-body">
      <input type="hidden" name="comment-id" value="{{id}}" />
      <input type="hidden" name="post-id" value="{{postId}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input" value="{{comment}}"></textarea>

      <button type="submit" class="btn">Update</button>

      <button type="button" id="delete-btn" class="btn">Delete</button>
    </div>
  </form>

<script src="/js/editComment.js"></script>